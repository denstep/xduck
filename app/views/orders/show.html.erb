<%=
  grid(@orders_grid) do |g|
    g.action_column  
  
    g.column :name => 'ID', :attribute => 'id' do |order|
      order.id
    end
    
    g.column :name => 'Number', :attribute => 'number' do |order|
      order.number
    end
    
    g.column :name => 'From Orgabization', :attribute => 'name', :model => 'Organization', :table_alias => 'from_organization' do |order|
      order.from_organization.name if order.from_organization
    end

    g.column :name => 'To Organization', :attribute => 'name', :model => 'Organization', :table_alias => 'to_organization' do |order|
      order.to_organization.name if order.to_organization
    end

    g.column :name => 'Owner', :attribute => 'email', :model => 'User' do |order|
      order.owner.email if order.owner
    end

    g.column :name => 'Note', :attribute => 'note' do |order|
      order.note
    end

    g.column :name => 'Tag', :attribute => 'tag' do |order|
      order.tag
    end
    
    g.column :name => 'Created at', :attribute => 'created_at' do |order|
      order.created_at.to_s(:short)
    end
    
    g.column :name => 'Updated at', :attribute => 'updated_at' do |order|
      order.updated_at.to_s(:short)
    end
    
    g.column do |order|
      link_to("Edit", :controller => "orders", :action => "edit", :id => order.id)
    end
  end
%>
