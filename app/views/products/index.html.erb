<%- model_class = Product -%>

<%=
  grid(@products_grid, show_filters: true) do |g|
    g.action_column  
  
#    g.column :name => 'ID', :attribute => 'id' do |product|
#      product.id
#    end
    
    g.column :name => t(:product_name), :attribute => 'name' do |product|
      product.name
    end
    
    g.column :name => t(:product_sku), :attribute => 'articul' do |product|
      product.articul
    end

    g.column :name => t(:measure), :attribute => 'measure' do |product|
      product.measure
    end

    g.column :name => t(:product_active), :attribute => 'active' do |product|
      product.active? ? t(:yes) : t(:no)
    end

    g.column :name => t(:product_forsale), :attribute => 'forsale' do |product|
      product.forsale? ? t(:yes) : t(:no)
    end
  
    g.column do |product|
      a = link_to('Edit', { :controller => 'products', :action => 'edit', :id => product.id })

#      a += ' '
#      a += link_to('Delete', { :controller => 'products', :action => 'delete', :id => product.id }, :data => { :confirm => 'Are you sure?' })

      a
    end
  end
%>



<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
