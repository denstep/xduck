:css
  #activity_item_product_id {
    width: 200px;
  }

  #activity_item_details {
    width: 60%;
    margin-bottom: 0px;
  }

%h2
  Add new product to
  = @activity.name
#activity_item_details
  = simple_form_for [@activity, @activity_item] do |f|
    .row
      .col-md-6
        = f.input :product_id, collection: Product.all
      .col-md-6
        = f.input :quantity, as: :integer

    .row
      .col-md-6
        = f.submit 'Add', class: 'btn btn-default'
